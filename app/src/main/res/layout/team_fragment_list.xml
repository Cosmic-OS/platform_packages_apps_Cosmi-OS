<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        app:cardElevation="2dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            android:id="@+id/picture_bg"
            android:padding="8dp">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/dev_image"
                android:layout_width="152dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:src="@drawable/ic_cosmic_banner"
                app:civ_border_width="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dev_name"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dev_disc"/>
        </LinearLayout>

            <TableLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="0,2"
                android:orientation="horizontal">
                <TableRow tools:ignore="UselessParent">
                <ImageView
                    android:id="@+id/github"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:contentDescription="@string/github"
                    android:src="@drawable/ic_github" />

                <ImageView
                    android:id="@+id/thread"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:contentDescription="@string/thread"
                    android:src="@drawable/ic_thread" />

                <ImageView
                    android:id="@+id/telegram"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:contentDescription="@string/telegram"
                    android:src="@drawable/ic_telegram" />
                </TableRow>
            </TableLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
